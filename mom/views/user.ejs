<body>
        <header>
                <ul class="headli">
                    <li><a href="/">Home</a></li>
                    <div class="rig">
                        <li><a href="/logout">Empty Cart</a></li>
                        
                    </div>
                </ul>
        </header>
<div class="container-fluid">
    <div class="row">
        <%dat.forEach(function(item){%>
            <div class="col-md-4">
             <form method="POST" action="/shop">
                <div class="image">
    
                 <img src="/uploads/<%=item.prodimage%>" class="img-fluid" alt=""/> 
                 <strong><%=item.prodname %></strong><br>
                 <strong>GH$<%=item.prodprice %></strong>
                 <input type="hidden" name="prod" value="<%=item.prodname %>"/>
                 <button class="btn">Shop</button>
                </div>
             </form>  
            </div>
        <%}); %> 
            
    </div>
</div>

